{
  "host": "localhost",
  "socket.io": {
    "host": "locahost",
    "port": 8081
  },
  "environments": {
    "dev": {
      "data": {
        "appdb": {
          "hostUrl": "http://localhost",
          "dbName":"featherblog",
          "auth": { "username":"featheradmin", "password":"password" }
        },
        "authdb": {
          "hostUrl": "http://localhost",
          "dbName": "_users",
          "auth": { "username":"featheradmin", "password":"password" }
        }
      },
      "auth": {
        "enabled": true,
        "userIdPrefix": "org.couchdb.user:"
      },
      "logging": {
        "enabled": true,
        "defaultLevel": "all",
        "absorbConsoleLogging": true,
        "categories": {
          "feather.http": "off",
          "feather.fsm": "info",
          "blog.api": "debug",
          "feather.respack":"all"
        },
        "appenders": [
          { 
            "type": "console", 
            "options": { "layout":"colored" } 
          }
        ],
        "templates": [
          {"id":"separator", "template":"-------------------------------------------------------------------------"}
        ]
      },
      "resources": {
        "publish": {
          "consolidate": true
        }
      }
    }
  },
  "test": {
    "data": {
      "appdb": {
        "hostUrl": "http://localhost",
        "dbName":"featherblog",
        "auth": { "username":"featheradmin", "password":"password" }
      },
      "authdb": {
        "hostUrl": "http://localhost",
        "dbName": "_users",
        "auth": { "username":"featheradmin", "password":"password" }
      }
    },
    "auth": {
      "enabled": true,
      "userIdPrefix": "org.couchdb.user:"
    },
    "logging": {
      "enabled": true,
      "defaultLevel": "all",
      "absorbConsoleLogging": true,
      "categories": {
        "feather.http": "off",
        "feather.fsm": "info",
        "blog.api": "debug",
        "feather.respack":"all"
      },
      "appenders": [
        { 
          "type": "console", 
          "options": { "layout":"colored" } 
        }
      ],
      "templates": [
        {"id":"separator", "template":"-------------------------------------------------------------------------"}
      ]
    },
    "resources": {
      "publish": {
        "consolidate": true
      }
    }
  }
}
