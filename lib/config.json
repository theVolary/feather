{
  "useAjaxForSystem": true,

  "cluster": false,

  "connect": {
    "cookieParser": {
      "secret": "feather.sid"
    },
    "session": {
      "provider": "memory",
      "key": "feather.sid",
      "secret": "feather app key",
      "ignorePaths": ["/robots.txt"],
      "cookie": { 
        "path": "/", 
        "httpOnly": false, 
        "maxAge": 14400000, 
        "secure": false 
      }
    }
  },

  "host": "localhost",
  
  "socket.io": {
    "enabled": false,
    "port": 8081,
    "host": "localhost",
    "log level": 1,
    "log level docs": "0 = error, 1 = warn, 2 = info, 3 = debug"
  },
  
  "auth": {
    "enabled": false,
    "userIdPrefix": "org.couchdb.user:"
  },
  "ssl": {
    "enabled": false,
    "key": "full/path/to/key_file",
    "cert": "full/path/to/cert_file",
    "useRedirectServer": true,
    "redirectServerPort": 80
  },
  "daemon": {
    "runAsDaemon": false,
    "outputPath": "feather-app.out",
    "pidPath": "/tmp/feather-app.pid",
    "runAsUser": "root",
    "runAsGroup": "root"
  },
  "data": {
    "datalinking": {
      "enabled": true
    }
  },
  "domPoolSize": {
    "min": 10, 
    "max": 20
  },
  "environments": {
    "unittest": {
      "debug": true,
      "daemon": {
        "runAsDaemon": false
      },
      "data": {
        "appdb": {
          "provider": "test"
        }
      },
      "logging": {
        "enabled": true,
        "defaultLevel": "trace",
        "absorbConsoleLogging": true
      }
    },
    "dev": {}
  },
  "logging": {
    "enabled": true,
    "defaultLevel": "all",
    "absorbConsoleLogging": true,
    "appenders": [
      {
        "type": "console",
        "options": { "layout": "colored" }
      }
    ],
    "templates": [
      {"id":"separator", "template":"-------------------------------------------------------------------------"}
    ]
  },
  "resources": {
    "publish": {
      "consolidate": false,
      "minify": false,
      "gzip": false,
      "publisherId": "local",
      "publishers": [
        {
          "id": "local",
          "config": {
            "publishLocation": "feather-res-cache"
          }
        },
        {
          "id": "s3",
          "config": {
            "key": "",
            "secret": "",
            "bucket": "",
            "acl": "public-read",
            "publishUri": null
          }
        }
      ]
    },
    "packages": [
      {
        "publishType": "pageContent",
        "publisherId": "local"
      },
      { 
        "name":"feather-client-core.js",
        "consolidate": false,
        "minify": false,
        "publisherId": "local"
      },
      {
        "name": "feather-client-core.css",
        "consolidate": false,
        "minify": true,
        "publisherId": "local"
      }
    ]
  },
  
  "ui": {
    "enabled": true,
    "provider": "jqueryUI",
    "providers": [
      {
        "name": "jqueryUI",
        "jsFiles": [
          "/feather-client/lib/jqueryUI/js/jqueryUI.min.js",
          "/feather-client/ui.js"
        ],
        "cssFiles": [
          "/feather-client/lib/jqueryUI/css/jqueryUI.css"
        ]
      },
      {
        "name": "bootstrap",
        "jsFiles": [
          "/feather-client/lib/bootstrap/js/bootstrap.min.js",
          "/feather-client/ui-bootstrap.js"
        ],
        "cssFiles": [
          "/feather-client/lib/bootstrap/css/bootstrap.min.css",
          "/feather-client/lib/bootstrap/css/bootstrap-responsive.min.css"
        ]
      }
    ]
  }
}